<!DOCTYPE html>

<%- include("partials/_head.ejs") %>

<body>
  <%- include("partials/_nav.ejs") %>
  <div id="trackCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner vh-50">
      <div class="carousel-item active">
        <img src="https://motoiq.com/wp-content/uploads/2018/08/Vektor-Performance-Porsche-991-Header-Test-1-1920x1079.jpg" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="https://pcasdr.org/wp-content/uploads/2013/11/BWCW_P1050931.jpg" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="https://images.squarespace-cdn.com/content/v1/568755e4bfe8732981f6a68f/1451795719410-X425L34ORKO3IVKGC1XM/image-asset.jpeg" class="d-block w-100" alt="...">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#trackCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#trackCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-4">
        <ul class="list-group mt-5">
          <li class="list-group-item">Name: <%= track.name %>  </li>
          <li class="list-group-item">City: <%= track.city %> </li>
          <li class="list-group-item">State: <%= track.state %> </li>
          <li class="list-group-item">Length: <%= track.length %> miles</li>
        </ul>
      </div>
      <div class="col-8">
        <ul class="list-group mt-5">
          <% lapTimes.forEach(foundLapTimes => { %> 
            <li class="list-group-item">
              <%= foundLapTimes.user.firstName%>
              <%= foundLapTimes.user.lastName%>
              <%= foundLapTimes.car.make %>
              <%= foundLapTimes.car.model %>
              <%= foundLapTimes.car.tire %>
              <%= foundLapTimes.minutes%>:<%= foundLapTimes.seconds %>  
            </li>
          <% }) %> 
        </ul>
      </div>
    </div>
  </div>
</body>
  
</html>