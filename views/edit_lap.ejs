<!DOCTYPE html>

<%- include("partials/_head.ejs") %> 

<body>
  <%- include("partials/_nav.ejs") %> 
  <form action="/laptime/edit/<%= lapTime.id %>?_method=PUT" method="POST">
    
    <div class="input-group input-group-sm mb-3">
      <input type="hidden" class="form-control" name="user" value="<%= lapTime.user %>" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" >
    </div>

    <div class="input-group input-group-sm mb-3">
      <input type="hidden" class="form-control" name="car"  value="<%= lapTime.car %>"  aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
    </div>

    <div class="input-group input-group-sm mb-3">
      <input type="hidden" class="form-control" name="track"  value="<%= lapTime.track%>"  aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
    </div>

    <div class="input-group input-group-sm mb-3">
      <span class="input-group-text" id="inputGroup-sizing-sm">Time</span>
      <input type="text" class="form-control" name="minutes"  value="<%= lapTime.minutes %>"  aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">:
      <input type="text" class="form-control" name="seconds"  value="<%= lapTime.seconds%>"  aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
    </div>

    <div class="input-group input-group-sm mb-3">
      <span class="input-group-text" id="inputGroup-sizing-sm">DATE</span>
      <input type="date" value="<%= lapTime.date %>" name="date" class="form-control" name="date" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
    </div>

    <button type="submit" class="btn btn-primary mt-1">Update Car</button>

  </form>
</body>