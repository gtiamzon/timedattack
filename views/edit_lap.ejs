<!DOCTYPE html>

<%- include("partials/_head.ejs") %> 

<body>
  <%- include("partials/_nav.ejs") %> 
  <div class= "registerForm mt-4 container-fluid">
  <form action="/laptime/edit/<%= lapTime.id %>?_method=PUT" method="POST">
    
    <div class="input-group input-group-sm">
      <input type="hidden" class="form-control" name="user" value="<%= lapTime.user %>" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" >
    </div>

    <div class="input-group input-group-sm">
      <input type="hidden" class="form-control" name="car"  value="<%= lapTime.car %>"  aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
    </div>

    <div class="input-group input-group-sm">
      <input type="hidden" class="form-control" name="track"  value="<%= lapTime.track%>"  aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
    </div>

    <div class="input-group input-group-sm mb-3">
      <span class="input-group-text" id="inputGroup-sizing-sm">Time</span>
      <input type="number" class="form-control" name="minutes"  value="<%= minutes %>"  aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">:
      <input type="number" class="form-control" name="seconds"  value="<%= seconds%>"  aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" required>
    </div>

    <div class="input-group input-group-sm mb-3">
      <span class="input-group-text" id="inputGroup-sizing-sm">DATE</span>
      <input type="date" value="<%= lapTime.date %>" name="date" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
    </div required>
    <div>
      <button type="submit" class="btn btn-primary">Update Car</button>
      <a class="btn btn-primary" onclick="history.back(-1)" role="button">Cancel</a>
    </div>
  </form>
</div>
</body>